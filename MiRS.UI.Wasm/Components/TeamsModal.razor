@if (IsVisible)
{
    <div class="modal-backdrop" style="position:fixed; top:0; left:0; width:100%; height:100%; background-color: rgba(0,0,0,0.5);" @onclick="Close">
    </div>

    <div class="modal-dialog" style="position:fixed; top:50%; left:50%; transform: translate(-50%, -50%); background:white; padding:20px; border-radius:8px; z-index:1000;" @onclick:stopPropagation="true">
        <div class="modal-header">
            <h5>@Title</h5>
            <button class="btn btn-sm btn-secondary" @onclick="Close">X</button>
        </div>
        <div class="modal-body">
            @ChildContent
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" @onclick="OnOkClicked">OK</button>
            <button class="btn btn-secondary" @onclick="Close">Cancel</button>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public string Title { get; set; } = "Modal";
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnOk { get; set; }

    private async Task Close()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(false);
    }

    private async Task OnOkClicked()
    {
        if (OnOk.HasDelegate)
            await OnOk.InvokeAsync();
        await Close();
    }
}
